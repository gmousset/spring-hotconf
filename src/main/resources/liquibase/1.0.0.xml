<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
				  					  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<preConditions onFail="HALT">
		<runningAs username="webbase"/>
	</preConditions>

	<changeSet id="1" author="gwen">
		<comment>Create table Person</comment>
		<createTable tableName="person">
			<column name="id" type="uuid">
				<constraints primaryKey="true"/>
			</column>
			<column name="firstname" type="varchar(30)">
				<constraints nullable="false"/>
			</column>
			<column name="lastname" type="varchar(30)">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>
	
	<changeSet id="2" author="gwen">
		<comment>Add column 'age' to table person</comment>
		<addColumn tableName="person">
			<column name="age" type="int">
				<constraints nullable="true"/>
			</column>
		</addColumn>
	</changeSet>
	
	<changeSet id="3" author="gwen">
		<comment>Add column 'enable' to table person</comment>
		<addColumn tableName="person">
			<column name="enabled" type="boolean" defaultValueBoolean="true">
				<constraints nullable="false"/>
			</column>
		</addColumn>
	</changeSet>
	
	<changeSet id="4" author="toto">
		<comment>Add column 'countryCode' to table person. Country code is an ISO code with 2 characters.</comment>
		<addColumn tableName="person">
			<column name="countryCode" type="varchar(2)">
				<constraints nullable="true"/>
			</column>
		</addColumn>
		<comment>Add phone number.</comment>
		<addColumn tableName="person">
			<column name="phoneNumber" type="varchar(10)">
				<constraints nullable="true"/>
			</column>
		</addColumn>
	</changeSet>
	
	<changeSet id="5" author="gwen">
		<addLookupTable existingTableName="person" newTableName="wtf" newColumnName="wtfId" existingColumnName="id" newColumnDataType="uuid"/>
	</changeSet>
	
	<changeSet id="6" author="gwen">
		<dropForeignKeyConstraint baseTableName="person" constraintName="FK_PERSON_WTF"/>
	</changeSet>
	
	<changeSet id="7" author="gwen">
		<dropTable tableName="wtf"/>
	</changeSet>
	
	<changeSet id="8" author="gwen">
		<createTable tableName="address">
			<column name="street" type="varchar(20)"/>
			<column name="zipCode" type="varchar(10)"/>
			<column name="city" type="varchar(20)"/>
		</createTable>
	</changeSet>

</databaseChangeLog>